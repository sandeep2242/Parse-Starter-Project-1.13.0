<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#D3D3D3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:id="@+id/ifBooked"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/trans_black"
            android:gravity="center"
            android:text="You already Booked a cab"
            android:textColor="@color/white"
            android:visibility="gone"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/cabImage"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/cabImage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cabName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cab Name" />

                <TextView
                    android:id="@+id/cabFare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cab Fare" />

                <TextView
                    android:id="@+id/cabSeats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cab Seats Available" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/bookSingle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:background="@color/tur"
        android:gravity="center"
        android:padding="10dp"
        android:text="Book your seat"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/bookWhole"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tur"
        android:gravity="center"
        android:padding="10dp"
        android:text="Book all Seats"
        android:textColor="@color/white" />


</LinearLayout>