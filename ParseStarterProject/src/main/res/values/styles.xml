<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="Dark" parent="@android:style/Theme.Holo.Light">
        <item name="actionOverflowMenuStyle">@style/OverflowMenu</item>
        <item name="android:itemTextAppearance">@color/black</item>
    </style>



    <style name="OverflowMenu" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">@color/yellow</item>
        <item name="android:overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">4.0dip</item>
    </style>

</resources>
